{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@components": ["../components/"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/api/post.js",
    "pages",
    "components",
    "../components/",
    "components/ui",
    "styled-system",
    "@shadow-panda",
    "@shadow-panda/styled-system",
    "@shadow-panda/@shadow-panda/styled-system/**/*",
    "@shadow-panda/@shadow-panda/styled-system/*.*"
  ],
  "exclude": ["node_modules"]
}
